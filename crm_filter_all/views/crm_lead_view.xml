<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_crm_case_leads_all_filter" model="ir.ui.view">
        <field name="name">crm.lead.search.all.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='lost']" position="after">
                <filter string="All" name="all"
                        domain="['|', ('active', '=', True), ('active', '=', False)]"/>
            </xpath>
        </field>
    </record>

    <record id="view_crm_case_opportunities_all_filter" model="ir.ui.view">
        <field name="name">crm.lead.search.all.opportunity</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='lost']" position="after">
                <filter string="All" name="all"
                        domain="['|', ('active', '=', True), ('active', '=', False)]"/>
            </xpath>
        </field>
    </record>

</odoo>
