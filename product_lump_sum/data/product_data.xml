<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="cat_lump_sum" model="product.category">
            <field name="name">Lump sum</field>
        </record>

        <record id="cat_lump_sum_product" model="product.category">
            <field name="parent_id" ref="cat_lump_sum"/>
            <field name="name">Lump sum product</field>
        </record>

        <record id="cat_lump_sum_service" model="product.category">
            <field name="parent_id" ref="cat_lump_sum"/>
            <field name="name">Lump sum service</field>
        </record>

        <record id="expense_product_lump_sum" model="product.product">
            <field name="name">Lump sum</field>
            <field name="type">service</field>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
            <field name="list_price" eval="0"/>
            <field name="categ_id" ref="cat_lump_sum"/>
        </record>

        <record id="expense_product_lump_sum_product" model="product.product">
            <field name="name">Lump sum product</field>
            <field name="type">service</field>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
            <field name="list_price" eval="0"/>
            <field name="categ_id" ref="cat_lump_sum_product"/>
        </record>

        <record id="expense_product_lump_sum_service" model="product.product">
            <field name="name">Lump sum service</field>
            <field name="type">service</field>
            <field name="sale_ok" eval="True"/>
            <field name="purchase_ok" eval="False"/>
            <field name="list_price" eval="0"/>
            <field name="categ_id" ref="cat_lump_sum_service"/>
        </record>

    </data>
</odoo>
