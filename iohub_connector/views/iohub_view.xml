<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <menuitem id="menu_iohub" name="IOHub" web_icon="iohub_connector,static/description/icon.png"/>
    
    <!-- IOhub Box -->
    <record id="iohub_box_form_view" model="ir.ui.view">
        <field name="name">iohub.box.form</field>
        <field name="model">iohub.box</field>
        <field name="arch" type="xml">
            <form string="IOhub Box">
                <header>
                    <button name="action_start_mqtt"
                    string="Subscribe start" type="object"
                    attrs="{'invisible': [('connect', '=', True)]}"/>
                    <button name="action_stop_mqtt"
                    string="Subscribe stop" type="object"
                    attrs="{'invisible': [('connect', '=', False)]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="connect" invisible="1"/>
                            <field name="name" />
                            <field name="description" />
                            <field name="broker_url" />
                            <field name="broker_port" />
                        </group>
                        <group>
                            <field name="iohub_topic_read" />
                            <field name="iohub_topic_write" />
                        </group>
                    </group>
                    <group string="Authentication">
                        <group>
                            <field name="auth_required"/>
                            <field name="iohub_username" 
                            attrs="{'invisible': [('auth_required', '=', False)], 'required': [('auth_required', '=', True)]}"/>
                            <field name="iohub_password" 
                            attrs="{'invisible': [('auth_required', '=', False)], 'required': [('auth_required', '=', True)]}"/>
                        </group>
                    </group>
                    <field name="company_ids" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="iohub_box_tree_view" model="ir.ui.view">
        <field name="name">iohub.box.tree</field>
        <field name="model">iohub.box</field>
        <field name="arch" type="xml">
            <tree string="IOhub Box">
                <field name="name" />
                <field name="description" />
                <field name="broker_url" />
                <field name="broker_port" />
            </tree>
        </field>
    </record>

    <record id="iohub_box_action" model="ir.actions.act_window">
        <field name="name">IOhub Boxes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">iohub.box</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="iohub_box_tree_view"/>
    </record>
    
    <menuitem id="menu_view_iohub_box"
        action="iohub_box_action"
        parent="menu_iohub"
        sequence="99"/>

    <record id="iohub_message_queue_tree_view" model="ir.ui.view">
        <field name="name">iohub.message.queue.tree.view</field>
        <field name="model">iohub.message.queue</field>
        <field name="arch" type="xml">
            <tree string="IOhub Messages Queue" default_order="id desc" edit="0" delete="1" create="0" decoration-success="write_value==True" decoration-muted="processed==True">
                <field name="iohub_box_id"/>
                <field name="id_topic"/>
                <field name="payload"/>
                <field name="processed"/>
                <field name="write_value"/>
            </tree>
        </field>
    </record>

    <record id="iohub_message_queue_action" model="ir.actions.act_window">
        <field name="name">IOhub Messages Queue</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">iohub.message.queue</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="iohub_message_queue_tree_view"/>
    </record>

    <menuitem id="menu_view_iohub_message_queue"
        action="iohub_message_queue_action"
        parent="menu_iohub"
        sequence="100"/>

</odoo>