<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="quick_create_working_date_opportunity_form" model="ir.ui.view">
        <field name="name">crm.lead.form.working_date.quick_create</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.quick_create_opportunity_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='priority']" position="before">
                <field name="start_date"/>
                <field name="due_date"/>
                <field name="duration_estimate_hour"/>
            </xpath>
        </field>
    </record>

    <record id="crm_case_working_date_kanban_view_leads" model="ir.ui.view">
        <field name="name">crm.lead.working_date.kanban.lead</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='priority']" position="after">
                <field name="start_date"/>
                <field name="due_date"/>
                <field name="duration_estimate_hour"/>
            </xpath>

            <xpath expr="//div[hasclass('o_kanban_record_bottom')]" position="before">
                <div class="text-muted o_kanban_record_subtitle">
                    <t t-if="record.start_date.raw_value">
                        Start Date:
                        <field name="start_date"/>
                        <t t-if="record.due_date.raw_value">
                            <br/>
                        </t>
                    </t>
                    <t t-if="record.due_date.raw_value">
                        Due Date:
                        <field name="due_date"/>
                        <t t-if="record.duration_estimate_hour.raw_value">
                            <br/>
                        </t>
                    </t>
                    <t t-if="record.duration_estimate_hour.raw_value">
                        Duration Estimate Hour:
                        <field name="duration_estimate_hour"/>
                    </t>
                </div>
            </xpath>

        </field>
    </record>

    <record id="crm_working_date_case_form_view_oppor" model="ir.ui.view">
        <field name="name">crm.lead.form.working_date.opportunity</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="start_date"/>
                <field name="due_date"/>
                <field name="duration_estimate_hour"/>
            </xpath>
        </field>
    </record>

    <record id="crm_lead_working_date_view_pivot" model="ir.ui.view">
        <field name="name">crm.lead.working_date.view.pivot</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_pivot"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='planned_revenue']" position="before">
                <field name="duration_estimate_hour" type="measure"/>
            </xpath>
        </field>
    </record>

    <record id="view_create_opportunity_working_date_simplified" model="ir.ui.view">
        <field name="name">crm.lead.working_date.form.simple</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_create_opportunity_simplified"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='priority']" position="before">
                <div class="o_row">
                    <field name="start_date"/>
                    <field name="due_date"/>
                    <field name="duration_estimate_hour"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="crm_case_working_date_tree_view_oppor" model="ir.ui.view">
        <field name="name">crm.lead.working_date.tree.opportunity</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='activity_date_deadline']" position="after">
                <field name="start_date"/>
                <field name="due_date"/>
                <field name="duration_estimate_hour" sum="Expected Duration Estimation Hour"/>
            </xpath>
        </field>
    </record>

    <record id="crm_lead_working_date_view_tree_activity" model="ir.ui.view">
        <field name="name">crm.lead.working_date.tree.opportunity.next.activity</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_tree_activity"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_deadline']" position="before">
                <field name="start_date"/>
                <field name="due_date"/>
                <field name="duration_estimate_hour"/>
            </xpath>
        </field>
    </record>

</odoo>
