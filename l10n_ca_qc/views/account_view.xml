<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Fiscal Position Region Templates -->

        <record id="view_account_position_region_template_search" model="ir.ui.view">
            <field name="name">account.fiscal.position.region.template.search</field>
            <field name="model">account.fiscal.position.region.template</field>
            <field name="arch" type="xml">
                <search string="Fiscal Position Region">
                    <field name="name" string="Fiscal Position Region Template"/>
                </search>
            </field>
        </record>

        <record id="view_account_position_region_template_form" model="ir.ui.view">
            <field name="name">account.fiscal.position.region.template.form</field>
            <field name="model">account.fiscal.position.region.template</field>
            <field name="arch" type="xml">
                <form string="Fiscal Position Region Template">
                    <group col="4">
                        <field name="name"/>
                        <field name="code"/>
                        <field name="display_name" readonly="1"/>
                        <field name="account_fiscal_position_id"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_account_position_region_template_tree" model="ir.ui.view">
            <field name="name">account.fiscal.position.region.template.tree</field>
            <field name="model">account.fiscal.position.region.template</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Position Region">
                    <field name="display_name"/>
                </tree>
            </field>
        </record>

        <record id="action_account_fiscal_position_region_template_form" model="ir.actions.act_window">
            <field name="name">Fiscal Position Region</field>
            <field name="res_model">account.fiscal.position.region.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_position_region_template_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new fiscal position region
                </p>
            </field>
        </record>

    </data>
</odoo>
