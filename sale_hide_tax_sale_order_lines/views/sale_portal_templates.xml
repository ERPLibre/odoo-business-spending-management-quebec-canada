<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sale_order_no_tax_portal_content" inherit_id="sale.sale_order_portal_content">

        <xpath expr="//thead/tr/th[5]" position="replace">
            <t t-if="sale_order.hide_tax_sale_order != True">
                <th t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">Taxes</th>
            </t>
        </xpath>

        <xpath expr="//td/span[@t-field='line.name']/../../td[5]"
               position="replace">
            <t t-if="sale_order.hide_tax_sale_order != True">
                <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                </td>
            </t>
        </xpath>

    </template>

</odoo>
