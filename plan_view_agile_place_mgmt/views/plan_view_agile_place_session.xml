<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="plan_view_agile_place_session_view_form" model="ir.ui.view">
        <field name="name">plan_view_agile_place_session_form</field>
        <field name="model">plan.view.agile.place.session</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <header>
                    <button name="action_sync" string="Sync" type="object" class="oe_highlight" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="api_token" />
                        <field name="has_first_sync" />
                    </group>
                    <notebook>
                        <page string="Board">
                            <group>
                                <field name="board_ids" />
                            </group>
                        </page>
                        <page string="Requests">
                            <group>
                                <field name="request_history_ids" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="plan_view_agile_place_session_view_graph" model="ir.ui.view">
        <field name="name">plan_view_agile_place_session_graph</field>
        <field name="model">plan.view.agile.place.session</field>
        <field name="arch" type="xml">
            <graph string="Plan view agile place session">
                <field name="name" type="row" />
                <field name="api_token" type="row" />
                <field name="has_first_sync" type="row" />
            </graph>
        </field>
    </record>

    <record id="plan_view_agile_place_session_view_kanban" model="ir.ui.view">
        <field name="name">plan_view_agile_place_session_kanban</field>
        <field name="model">plan.view.agile.place.session</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="api_token" />
                <field name="has_first_sync" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="text-success float-right mb4" t-if="record.has_first_sync.raw_value">
                                        <i aria-label="Ok" class="fa fa-circle" role="img" title="Ok" />
                                    </li>
                                    <li class="text-danger float-right mb4" t-if="!record.has_first_sync.raw_value">
                                        <i aria-label="Invalid" class="fa fa-circle" role="img" title="Invalid" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="plan_view_agile_place_session_view_pivot" model="ir.ui.view">
        <field name="name">plan_view_agile_place_session_pivot</field>
        <field name="model">plan.view.agile.place.session</field>
        <field name="arch" type="xml">
            <pivot string="Plan view agile place session">
                <field name="name" type="row" />
                <field name="api_token" type="row" />
                <field name="has_first_sync" type="row" />
            </pivot>
        </field>
    </record>

    <record id="plan_view_agile_place_session_view_search" model="ir.ui.view">
        <field name="name">plan_view_agile_place_session_search</field>
        <field name="model">plan.view.agile.place.session</field>
        <field name="arch" type="xml">
            <search string="Plan view agile place session">
                <filter domain="[('name','!=',False)]" name="name" string="URL" />
                <filter domain="[('api_token','!=',False)]" name="api_token" string="Api Token" />
                <filter domain="[('has_first_sync','=',True)]" name="has_first_sync" string="Has First Sync" />
            </search>
        </field>
    </record>

    <record id="plan_view_agile_place_session_view_tree" model="ir.ui.view">
        <field name="name">plan_view_agile_place_session_tree</field>
        <field name="model">plan.view.agile.place.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="api_token" />
                <field name="has_first_sync" />
            </tree>
        </field>
    </record>

    <act_window
        id="plan_view_agile_place_session_view_agile_place_session_action_window"
        name="View agile place session"
        res_model="plan.view.agile.place.session"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
