<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="plan_view_agile_place_lane_view_form" model="ir.ui.view">
        <field name="name">plan_view_agile_place_lane_form</field>
        <field name="model">plan.view.agile.place.lane</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-archive" name="toggle_active" type="object">
                            <field name="active" widget="boolean_button" />
                        </button>
                    </div>
                    <group>
                        <field name="board_id" />
                        <field name="sequence" />
                        <field name="description" />
                        <field name="is_collapsed" />
                        <field name="lane_class_type" />
                        <field name="lane_id_pvap" />
                        <field name="lane_type" />
                        <field name="orientation" />
                        <field name="parent_lane_id" />
                        <field name="session_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="plan_view_agile_place_lane_view_graph" model="ir.ui.view">
        <field name="name">plan_view_agile_place_lane_graph</field>
        <field name="model">plan.view.agile.place.lane</field>
        <field name="arch" type="xml">
            <graph string="Plan view agile place lane">
                <field name="name" type="row" />
                <field name="lane_id_pvap" type="row" />
                <field name="session_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="plan_view_agile_place_lane_view_kanban" model="ir.ui.view">
        <field name="name">plan_view_agile_place_lane_kanban</field>
        <field name="model">plan.view.agile.place.lane</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="lane_id_pvap" />
                <field name="session_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="lane_id_pvap" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="session_id" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="plan_view_agile_place_lane_view_pivot" model="ir.ui.view">
        <field name="name">plan_view_agile_place_lane_pivot</field>
        <field name="model">plan.view.agile.place.lane</field>
        <field name="arch" type="xml">
            <pivot string="Plan view agile place lane">
                <field name="name" type="row" />
                <field name="lane_id_pvap" type="row" />
                <field name="session_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="plan_view_agile_place_lane_view_search" model="ir.ui.view">
        <field name="name">plan_view_agile_place_lane_search</field>
        <field name="model">plan.view.agile.place.lane</field>
        <field name="arch" type="xml">
            <search string="Plan view agile place lane">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <filter domain="[('lane_id_pvap','!=',False)]" name="lane_id_pvap" string="Lane Id Pvap" />
                <filter domain="[('session_id','!=',False)]" name="session_id" string="Session" />
                <group string="Group By" expand="1">
                    <filter name="parent_lane_id" string="Parent" context="{'group_by':'parent_lane_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="plan_view_agile_place_lane_view_tree" model="ir.ui.view">
        <field name="name">plan_view_agile_place_lane_tree</field>
        <field name="model">plan.view.agile.place.lane</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="is_collapsed" />
                <field name="lane_class_type" />
                <field name="lane_id_pvap" />
                <field name="lane_type" />
                <field name="orientation" />
                <field name="parent_lane_id" />
                <field name="sequence" />
                <field name="session_id" />
            </tree>
        </field>
    </record>

    <act_window
        id="plan_view_agile_place_lane_view_agile_place_lane_action_window"
        name="View agile place lane"
        res_model="plan.view.agile.place.lane"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
