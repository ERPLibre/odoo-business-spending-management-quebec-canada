<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="plan_view_agile_place_board_view_form" model="ir.ui.view">
        <field name="name">plan_view_agile_place_board_form</field>
        <field name="model">plan.view.agile.place.board</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="board_id_pvap" />
                        <field name="session_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="plan_view_agile_place_board_view_graph" model="ir.ui.view">
        <field name="name">plan_view_agile_place_board_graph</field>
        <field name="model">plan.view.agile.place.board</field>
        <field name="arch" type="xml">
            <graph string="Plan view agile place board">
                <field name="name" type="row" />
                <field name="board_id_pvap" type="row" />
                <field name="session_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="plan_view_agile_place_board_view_kanban" model="ir.ui.view">
        <field name="name">plan_view_agile_place_board_kanban</field>
        <field name="model">plan.view.agile.place.board</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="board_id_pvap" />
                <field name="session_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="board_id_pvap" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="session_id" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="plan_view_agile_place_board_view_pivot" model="ir.ui.view">
        <field name="name">plan_view_agile_place_board_pivot</field>
        <field name="model">plan.view.agile.place.board</field>
        <field name="arch" type="xml">
            <pivot string="Plan view agile place board">
                <field name="name" type="row" />
                <field name="board_id_pvap" type="row" />
                <field name="session_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="plan_view_agile_place_board_view_search" model="ir.ui.view">
        <field name="name">plan_view_agile_place_board_search</field>
        <field name="model">plan.view.agile.place.board</field>
        <field name="arch" type="xml">
            <search string="Plan view agile place board">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <filter domain="[('board_id_pvap','!=',False)]" name="board_id_pvap" string="Board Id Pvap" />
                <filter domain="[('session_id','!=',False)]" name="session_id" string="Session" />
            </search>
        </field>
    </record>

    <record id="plan_view_agile_place_board_view_tree" model="ir.ui.view">
        <field name="name">plan_view_agile_place_board_tree</field>
        <field name="model">plan.view.agile.place.board</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="board_id_pvap" />
                <field name="session_id" />
            </tree>
        </field>
    </record>

    <act_window
        id="plan_view_agile_place_board_view_agile_place_board_action_window"
        name="View agile place board"
        res_model="plan.view.agile.place.board"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
