            <field name="name">Workcenter categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.workcenter.category</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <record id="mrp_workcenter_machine_type_action" model="ir.actions.act_window">
            <field name="name">Workcenter machines type</field>
